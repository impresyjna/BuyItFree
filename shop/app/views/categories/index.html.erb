<p id="notice"><%= notice %></p>

<h1>Kategorie</h1>

<table align="center">
  <thead>
    <tr>
      <th width=50% style="text-align:center">Nazwa</th>
      <th colspan="3" style="text-align:center">Opcje</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Pokaż', category, :class => "btn btn-xs btn-info" %> </td>
        <td><%= link_to 'Edytuj', edit_category_path(category), :class => "btn btn-xs btn-warning" %> </td>
        <td><%= link_to 'Usuń', category, method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć kategorię?' }, :class => "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan=4 style="text-align:center"><br><%= link_to "<span class=\"glyphicon glyphicon-plus\" aria-hidden=\"true\"/> Nowa kategoria".html_safe, new_category_path, :class => "btn btn-success" %></td>
    </tr>
  </tbody>
</table>
