<% provide(:title, 'Zarejestruj się') %>
<h1>Rejestracja</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Nazwa użytkownika", class: 'required' %>
      <%= f.text_field :name, class: 'form-control', :required => true %>

      <%= f.label :email, "Email", class: 'required' %>
      <%= f.email_field :email, class: 'form-control', :required => true %>

      <%= f.label :password, "Hasło", class: 'required' %>
      <%= f.password_field :password, class: 'form-control', :required => true %>

      <%= f.label :password_confirmation, "Potwierdzenie hasła", class: 'required' %>
      <%= f.password_field :password_confirmation, class: 'form-control', :required => true %>
      
      <%= f.label :account_type, "Typ konta" %>
      <%= f.select :account_type, options_for_select([["Sprzedawca", "seller"], ["Klient", "customer"]]) %>
 
      <%= f.submit "Zarejestruj", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>