<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.goods.any? %>
      <h3>Goods (<%= @user.goods.count %>)</h3>
      <ol class="goods">
        <%= render @goods %>
      </ol>
      <%= will_paginate @goods %>
    <% end %>
  </div>

</div>