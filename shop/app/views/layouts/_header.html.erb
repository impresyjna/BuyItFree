<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Strona domowa",   root_path %></li>
        <li><%= link_to "Produkty", all_products_path %></li>
        <% if logged_in? %> 
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Konto <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profil", current_user %></li>
              <li><%= link_to "Ustawienia", edit_user_path(current_user) %></li>
              <% if seller?(current_user) %>
                <li><%= link_to "Edytuj dane", seller_account_path %></li>
                <li><%= link_to "Dodaj produkt", add_product_path %></li>
                <li><%= link_to "Moje produkty", my_products_path %></li>
              <% else %>
                <li><%= link_to "Edytuj dane", customer_account_path %></li>
              <% end %> 
              <% if current_user.admin? %>
                <li><%= link_to "Użytkownicy", users_path %></li>
                <li><%= link_to "Kategorie", categories_path %></li>
                <li><%= link_to "Wiadomosci od użytkowników", contacts_path %></li>
                <li><%= link_to "Stany przesyłek", order_states_path %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Wyloguj się", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Zaloguj się", login_path %></li>
          <li><%= link_to "Zarejestruj się", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>