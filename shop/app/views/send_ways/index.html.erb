<p id="notice"><%= notice %></p>

<h1>Listing Send Ways</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Good</th>
      <th>How many days</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @send_ways.each do |send_way| %>
      <tr>
        <td><%= send_way.name %></td>
        <td><%= send_way.good %></td>
        <td><%= send_way.how_many_days %></td>
        <td><%= send_way.price %></td>
        <td><%= link_to 'Show', send_way %></td>
        <td><%= link_to 'Edit', edit_send_way_path(send_way) %></td>
        <td><%= link_to 'Destroy', send_way, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

